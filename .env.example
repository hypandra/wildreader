# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Better Auth
BETTER_AUTH_SECRET=your-secret-key
BETTER_AUTH_URL=http://localhost:3000
NEXT_PUBLIC_BETTER_AUTH_URL=http://localhost:3000

# Database URL (Session Pooler for Better Auth)
DATABASE_URL=postgresql://postgres.your-project:password@aws-1-us-east-2.pooler.supabase.com:5432/postgres

# OpenRouter API (for AI image generation)
OPENROUTER_API_KEY=sk-or-v1-your-api-key

# BunnyCDN (Optional - for permanent image storage)
# Sign up at https://bunny.net and create a Storage Zone + Pull Zone
# If not configured, images will be stored as base64 in the database (not recommended for production)
BUNNY_STORAGE_ZONE=your-storage-zone-name
BUNNY_STORAGE_PASSWORD=your-storage-zone-password
BUNNY_CDN_HOSTNAME=your-pullzone.b-cdn.net
